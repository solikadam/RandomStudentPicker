<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomStudentPicker.Views.MainPage"
             Title="Student Picker">
    
    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/Styles.css" />
    </ContentPage.Resources>
    
    <StackLayout Padding="10">
        <ListView StyleClass="lista_klas" 
                  x:Name="ClassesList" 
                  ItemSelected="OnClassSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding}" StyleClass="klasa_w_liscie" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="CenterAndExpand" 
                     Spacing="10">
            <Button StyleClass="button" 
                    Text="Dodaj Klasę" 
                    Clicked="OnAddClassClicked" />
            <Button StyleClass="button" 
                    Text="Usuń Klasę" 
                    Clicked="OnDeleteClassClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>